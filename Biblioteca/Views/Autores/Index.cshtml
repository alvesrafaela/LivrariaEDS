@model IEnumerable<Biblioteca.Models.Autor>

@{
    ViewBag.Title = "Index";
}

<h2>Autor</h2>

<p>
    @Html.ActionLink("Novo Autor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.Label("Ações")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CodAu }) |
            @Html.ActionLink("Read", "Details", new { id=item.CodAu }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CodAu })
        </td>
    </tr>
}

</table>
