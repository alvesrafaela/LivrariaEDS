@model IEnumerable<Biblioteca.Models.Relatorio>

@{
    ViewBag.Title = "ListarLivros";
}

<h4>Relatório de Listagem dos Livros </h4>

<table class="table">
    <tr>
        <th>ID </th>
        <th>Título </th>
        <th>Editora</th>
        <th>Edição </th>
        <th>Ano Publicação </th>
        <th>Autor </th>
        <th>Assunto </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Cod)</td>
            <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
            <td>@Html.DisplayFor(modelItem => item.Editora)</td>
            <td>@Html.DisplayFor(modelItem => item.Edicao)</td>
            <td>@Html.DisplayFor(modelItem => item.AnoPublicacao)</td>
            <td>@Html.DisplayFor(modelItem => item.Autor)</td>
            <td>@Html.DisplayFor(modelItem => item.Assunto)</td>
        </tr>}
    <tr>
        <td>
            @*<b>@Model.Count registos de @Model.TotalItemCount</b>*@
        </td>
        @*<td>
            <a href="/Relatorios/ListarLivros">
                <b>GERAR PDF</b>
            </a>
        </td>*@
    </tr>
</table>
     
